<turbo-frame id="full_response">
<div class="mobile_weather_div">

  <% if @erred %>
    <p class="fs-6">Error Response: <%= @message %></p>
  <% else %>

    <!-- START ALIGNMENT ROW -->
    <div class="row">
      <!-- Left Column -->
      <div class="col-md-3">
        <%= @location_name %>
        <div class="mobile_daily_container">
          <table class="mobile_daily table">
            <tr>
              <% @forecasts.each do |forecast| %>
                <td class="text-right align-top" style="vertical-align: top;">
                  <div class="d-flex flex-column align-items-right" style="min-height: 120px;width: 100px">
                    <div class="forecast-name text-right mb-2" style="min-height: 3em;">
                      <small><b><%= forecast["name"] %></b></small>
                    </div>
                    <%= image_tag(forecast["icon"], title: forecast["detailedForecast"]) %>
                    <div class="forecast-name text-right mb-2" style="min-height: 3em;">
                      <% temp = forecast["isDaytime"] ? "High #{forecast["temperature"]}" : "Low #{forecast["temperature"]}" %>
                      <% temp_class = forecast["isDaytime"] ? "text-danger" : "text-info" %>
                      <small class="<%= temp_class %>"><b><%= temp %>&deg; <%= forecast["temperatureUnit"] %></b></small><br/>
                      <br/>
                      <small>
                        <%= forecast["shortForecast"] %>
                      </small>
                    </div>
                  </div>
                </td>
              <% end %>
            </tr>
          </table>

        </div>
      </div>
    </div>
    <!-- END ALIGNMENT ROW -->

  <% end %>
</div>
</turbo-frame>