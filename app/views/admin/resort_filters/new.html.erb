<!-- app/views/admin/resort_filters/new.html.erb -->
<h2>New Filter for <%= @resort.resort_name %></h2>
<%= form_with model: [:admin, @resort, @resort_filter] do |f| %>
  <div><%= f.label :kind %><br><%= f.select :kind, ResortFilter::KINDS %></div>
  <div><%= f.label :data, "Data (JSON)" %><br><%= f.text_area :data, rows: 10 %></div>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>